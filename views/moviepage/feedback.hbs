 <div class="container">
        <div class="row">
            <div class="col-md-12 ">
                <div id="letstalk " class="col-md-12">
                    <!-- <h1>Sign Up for Free</h1> -->
                    <form action="/moviepage" autocomplete="off" class="form-horizontal text-center" method="POST" novalidate="novalidate">
                        <h1>
                            Your Reviews Matters
                        </h1>
                        <div class="form-group ">
                            <div class="col-md-6">
                                <input type="text" name="name" class="form-control " placeholder="What's your name?" value="{{movie.name}}">
                                <div class="text-danger">
                                    {{movie.nameError}}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <input type="text" name="lastname" class="form-control" placeholder="What's your surname?" value="{{movie.lastname}}">
                                <div class="text-danger">
                                    {{movie.lastnameError}}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <input type="text" name="email" class="form-control" placeholder="What's your email?" value="{{movie.email}}">
                                <div class="text-danger">
                                    {{movie.emailError}}
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <div class="col-md-12">
                                <label for="" class="">Message</label>
                                <textarea name="feedback"  class="form-control" rows="3" placeholder="Your Message here.." value="{{movie.feedback}}"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" name="submit" class="button contact-submit">Send message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


